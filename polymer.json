{
  "entrypoint": "index.html",
  "shell": "src/services-shell.html",
  "fragments": [
    "src/service-edit.html",
    "src/service-view.html",
    "src/service-viewnew.html",
    "src/service-new.html",
    "src/services.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/custom-elements-*.js",
    "bower_components/webcomponentsjs/webcomponents-*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
     {
      "name": "es6-unbundled",
      "browserCapabilities": [
        "es2015",
        "push"
      ],
      "js": {
        "minify": true,
        "compile": false
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": false,
      "addServiceWorker": true,
      "addPushManifest": true,
      "preset": "es6-unbundled",
      "basePath": true
    }
  ]
}
