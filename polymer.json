{
  "entrypoint": "index.html",
  "shell": "src/defie-menu.js",
  "fragments": [
  ],
  "sources": [
    "src/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/webcomponents-*",
    "node_modules/@polymer/**/*"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
     {
      "name": "es6-unbundled",
      "browserCapabilities": [
        "es2015",
        "push"
      ],
      "js": {
        "minify": true,
        "compile": false
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": false,
      "addServiceWorker": true,
      "addPushManifest": true,
      "preset": "es6-unbundled",
      "basePath": true
    }
  ]
}
